<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="446.0" prefWidth="564.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.task2.Task2Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Canvas fx:id="sheet" height="331.0" nodeOrientation="INHERIT" onMouseClicked="#ClickMouse" width="517.0">
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </Canvas>
    <FlowPane prefHeight="56.0" prefWidth="524.0">
        <Label text="Название фигуры:" />
        <TextField fx:id="nameShape" />
        <ColorPicker fx:id="colorPicker" />
        <Button fx:id="getFileButton" onAction="#clickFile" text="Открыть файл" />
        <Button fx:id="saveFileButton" onAction="#saveFileClick" text="Сохранить"/>
        <Label fx:id="infoShape" text="    Размер фигуры:" />
        <Spinner fx:id="spinner" />
        <Button fx:id="popButton" onAction="#clickButton" text="Обратно" />
        <Separator prefHeight="28.0" prefWidth="200.0" />
    </FlowPane>
</VBox>
